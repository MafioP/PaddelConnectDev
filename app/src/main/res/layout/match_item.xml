<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Día y horas -->
    <TextView
        android:id="@+id/textViewDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:icon="@drawable/ic_fechaHora"
        android:text=""
        android:textSize="16sp"
        android:textStyle="bold"/>

    <!-- Distancia -->
    <TextView
        android:id="@+id/textViewDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDateTime"
        android:icon="@drawable/ic_ubicacion"
        android:text=""
        android:textSize="14sp"/>

    <!-- Foto de los usuarios inscritos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDistance"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:visibility="visible" />

    <!-- Icono 'Más' para unirse -->
    <ImageView
        android:id="@+id/imageViewJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerViewUsers"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_add" />

</RelativeLayout>