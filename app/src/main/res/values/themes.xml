<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PadelConnect" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Color principal azul parecido al de las pistas de pádel -->
        <item name="colorPrimary">#0084FF</item>
        <!-- Variante más clara del color principal -->
        <item name="colorPrimaryVariant">#4FA2FF</item>
        <!-- Color del texto sobre el color primario -->
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Color secundario verde parecido al de las pelotas de pádel -->
        <item name="colorSecondary">#00CC66</item>
        <!-- Variante más clara del color secundario -->
        <item name="colorSecondaryVariant">#1DB954</item>
        <!-- Color del texto sobre el color secundario -->
        <item name="colorOnSecondary">#000000</item>

        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.PadelConnect.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PadelConnect.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PadelConnect.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Estilo para el texto del BottomNavigationView -->
    <style name="BottomNavigationViewText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item> <!-- Tamaño del texto -->
        <item name="android:height">20dp</item> <!-- Altura del texto -->
        <!-- Otros atributos de texto -->
    </style>
</resources>